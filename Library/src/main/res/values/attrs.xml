<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppTheme">
        <attr name="textStyle" format="string"/>
    </declare-styleable>

    <!-- Implementation specific to the Application -->

    <!-- Define a font called 'Roboto' and its 'textStyle' values -->
    <declare-styleable name="Roboto">
        <attr name="normal" format="string"/>
        <attr name="bold" format="string"/>
        <attr name="light" format="string"/>
        <attr name="condensed" format="string"/>
        <attr name="condensedBold" format="string"/>
        <attr name="condensedLight" format="string"/>
    </declare-styleable>

    <!-- Define a font called 'SourceSansPro' and its 'textStyle' values -->
    <declare-styleable name="SourceSansPro">
        <attr name="regular" format="string"/>
        <attr name="black" format="string"/>
        <attr name="lightItalic" format="string"/>
        <attr name="semiBoldItalic" format="string"/>
    </declare-styleable>

</resources>