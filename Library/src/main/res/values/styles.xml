<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="textStyle">bold</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="textStyle">light</item>
    </style>

    <style name="TextAppearance.Condensed">
        <item name="textStyle">bold</item>
    </style>

    <style name="TextAppearance.Condensed.Light">
        <item name="textStyle">condensedLight</item>
    </style>

    <style name="TextAppearance.Condensed.Bold">
        <item name="textStyle">condensedBold</item>
    </style>

</resources>
