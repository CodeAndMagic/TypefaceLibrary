<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:textViewStyle">@style/TextViewStyle.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:textViewStyle">@style/TextViewStyle.Dark</item>
    </style>

    <style name="TextViewStyle.Light">
        <item name="android:textAppearance">@style/TextAppearance.Light</item>
        <item name="android:fontFamily" tools:ignore="NewApi">light</item>
    </style>

    <style name="TextViewStyle.Dark">
        <item name="android:textAppearance">@style/TextAppearance.Dark</item>
        <item name="android:fontFamily" tools:ignore="NewApi">black</item>
    </style>

    <!-- TextAppearance definitions -->
    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="android:textColor">#9933cc</item>
    </style>

    <style name="TextAppearance.Dark">
        <item name="android:textColor">#fdbb33</item>
    </style>
</resources>
